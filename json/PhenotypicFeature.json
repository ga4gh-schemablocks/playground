   "properties" : {
      "ageOfOnset" : {
         "$ref" : "https://schemablocks.org/schemas/ga4gh/Age.json",
         "description" : "The values of this will come from the HPO onset hierarchy i.e. subclasses \nof HP:0003674.\nFHIR mapping: Condition.onset\n",
         "examples" : [
            {
               "age" : "P35Y",
               "ageClass" : {
                  "id" : "HP:0003596",
                  "label" : "Middle age onset"
               }
            }
         ]
      },
      "ageRangeOfOnset" : {
         "$ref" : "https://schemablocks.org/schemas/ga4gh/AgeRange.json",
         "description" : "The values of this will come from the HPO onset hierarchy i.e. subclasses \nof HP:0003674.\nFHIR mapping: Condition.onset\n",
         "examples" : [
            {
               "end" : {
                  "age" : "P60Y"
               },
               "start" : {
                  "age" : "P35Y",
                  "ageClass" : {
                     "id" : "HP:0003596",
                     "label" : "Middle age onset"
                  }
               }
            }
         ]
      },
      "classOfOnset" : {
         "$ref" : "https://schemablocks.org/schemas/ga4gh/OntologyClass.json",
         "description" : "the values of this will come from the HPO onset hierarchy i.e. subclasses of HP:0003674\nFHIR mapping: Condition.onset\n",
         "examples" : [
            {
               "id" : "HP:0003596",
               "label" : "Middle age onset"
            }
         ]
      },
      "description" : {
         "description" : "Free-text description of the phenotype. Note this is not a acceptable \nplace to document/describe the phenotype - the type and onset etc... \nfields should be used for this purpose.\n",
         "examples" : [
            "Pancreatic Adenocarcinoma"
         ],
         "type" : "string"
      },
      "evidence" : {
         "description" : "Evidences for how the phenotype was determined.",
         "examples" : [
            {
               "evidenceCode" : {
                  "id" : "add example",
                  "label" : "add example"
               },
               "reference" : {
                  "description" : "add example",
                  "id" : "add example"
               }
            }
         ],
         "items" : {
            "$ref" : "https://schemablocks.org/schemas/ga4gh/Evidence.json"
         },
         "type" : "array"
      },
      "modifiers" : {
         "description" : "Subclasses of HP:0012823 ! Clinical modifier apart from Severity \nHP:0012824 - Severity.\n",
         "examples" : [
            {
               "id" : "HP:0025282",
               "label" : "Dull"
            }
         ],
         "items" : {
            "$ref" : "https://schemablocks.org/schemas/ga4gh/OntologyClass.json"
         },
         "type" : "array"
      },
      "negated" : {
         "description" : "Flag to indicate whether the phenotype was observed or not. Default is 'false',\nin other words the phenotype was observed. Therefore it is only required in cases to indicate that\nthe phenotype was looked for, but found to be absent. More formally, this modifier indicates\nthe logical negation of the OntologyClass used in the 'type' field.\n*CAUTION* It is imperative to check this field for correct interpretation of the phenotype!\n",
         "examples" : [
            "false"
         ],
         "type" : "boolean"
      },
      "severity" : {
         "$ref" : "https://schemablocks.org/schemas/ga4gh/OntologyClass.json",
         "description" : "Severity of the condition e.g. subclasses of HP:0012824-Severity or \nSNOMED:272141005-Severities.\nFHIR mapping: Condition.severity\n",
         "examples" : [
            {
               "id" : "HP:0012825",
               "label" : "Mild"
            }
         ]
      },
      "type" : {
         "$ref" : "https://schemablocks.org/schemas/ga4gh/OntologyClass.json",
         "description" : "The primary ontology class which describes the phenotype.\nFHIR mapping: Condition.identifier\n",
         "examples" : [
            {
               "id" : "add example",
               "label" : "Craniosynostosis"
            }
         ]
      }
   },
   "required" : [
      "type",
      {
         "oneof" : [
            "ageOfOnset",
            "ageRangeOfOnset",
            "classOfOnset"
         ]
      }
   ],
   "title" : "PhenotypicFeature",
   "type" : "object"
}

